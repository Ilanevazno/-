// Миксин для шапки каждого левого блока
mixin block__header({src, title, modif})
    .block__header
        div(class="block__header_image block__header_image--"+ modif)
            img(src= src)
        .block__header_title
            h2= title
        .block__header_title_line
// Миксин для шапки каждого левого блока
mixin block__header-second(src, title)
    .block__header-second
        .block__image-second
            img(src= src)
        .block__title-second
            h2= title
        .block__title__line-second
