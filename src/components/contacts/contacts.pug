include ../block-header/block-header
mixin contacts(data = {})
  .contacts
    .contacts__header
      +block-header({src: 'contacts-icon.jpg', title: 'Contact'})
    .contacts__main
      each item in data
        -
          const {
            type = '',
            title = '',
            text = '',
          } = item;
        .contacts__row
          .contacts__caption= title
          case type
            when 'text'
              p.contacts__data.contacts__text-label= text
            when 'email'
              a(href=`mailto: ${text}`).contacts__data.contacts__link-label= text
            when 'tel'
              a(href=`tel: ${text}`).contacts__data.contacts__link-label= text
            when 'link'
              a(href= text target="_blank" rel="noopener noreferrer").contacts__data.contacts__link-label= text