include ../block-header/block-header
mixin contacts(data = {})
  -
    let {
      address = '',
      email = '',
      tel = '',
      website = '',
    } = data;
  .contacts
    .contacts__header
      +block-header({src: 'contacts-icon.jpg', title: 'Contact'})
    .contacts__main
      each item in data
        .contacts__row
          .contacts__caption= item.title
          - if (item.type === "text")
            p.contacts__data= item.text
          - if (item.type === "email")
            a(href="mailto:" + item.text).contacts__data= item.text
          - if (item.type === "tel")
            a(href="tel:" + item.text).contacts__data= item.text
          - if (item.type === "link")
            a(href= item.text target="_blank" rel="noopener noreferrer").contacts__data= item.text